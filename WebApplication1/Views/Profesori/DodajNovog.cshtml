<center>
    <form style="font-family:Consolas" asp-controller="Profesori" asp-action="SnimiNovog" id="forma">
        <div class="form-group">
            <label>Ime</label>
            <input type="text" asp-for="Ime" class="form-control" />
        </div>
        <div class="form-group">
            <label>Prezime</label>
            <input type="text" asp-for="Prezime" class="form-control" />
        </div>
        <div class="form-group">
            <label>Zvanje</label>
            <input type="text" asp-for="Zvanje" class="form-control" />
        </div>
        <div class="form-group">
            <label>Mail</label>
            <input type="text" asp-for="Mail" class="form-control" />
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label>Datum rođenja</label>
            <input type="date" asp-for="Datum_Rodjenja" class="form-control" />
        </div>
        <div class="form-group">
            <label>Datum zaposlenja</label>
            <input type="date" asp-for="Datum_Zaposlenja" class="form-control" />
        </div>
        <div class="form-group">
            <label>Adresa</label>
            <input type="text" asp-for="Adresa" class="form-control" />
        </div>
        <div class="form-group">
            <label>Telefon</label>
            <input type="text" asp-for="Telefon" class="form-control" />
        </div>
        <div class="form-group">
            <label>Spol</label>
            <select asp-for="Spol" class="form-control">
                <option>---Odaberite---</option>
                <option disabled="disabled">---------------</option>
                <option value="M">M</option>
                <option value="Ž">Ž</option>
            </select>
        </div>
        <div class="form-group">
            <label>Staž</label>
            <input type="number" asp-for="Staz" class="form-control" />
        </div>
        <div class="form-group">
            <label>Stalan zaposlenik</label>
            <select asp-for="Stalan_Zaposlenik" class="form-control">
                <option>---Odaberite---</option>
                <option disabled="disabled">---------------</option>
                <option value="DA">DA</option>
                <option value="NE">NE</option>
            </select>
        </div>
        <div class="form-group">
            <label>Kancelarija</label>
            <select name="Kancelarija" class="form-control">
                <option>---Odaberite---</option>
                <option disabled="disabled">-------------------</option>
                <option>Kancelarija 1</option>
                <option>Kancelarija 2</option>
                <option>Kancelarija 3</option>
                <option>Kancelarija 4</option>
                <option>Kancelarija 5</option>
                <option>Kancelarija 6</option>
                <option>Kancelarija 7</option>
                <option>Kancelarija 8</option>
                <option>Kancelarija 9</option>
                <option>Kancelarija 10</option>
            </select>
        </div>
        <button type="submit" id="go" value="SnimiNovog" class="btn btn-primary">Snimi</button>
        <a id="back" class="btn btn-default" href="/Profesori/Prikaz">Nazad</a>
    </form>
</center>

