            <label>Datum zaposlenja</label>
            <input type="date" class="form-control" name="datum_zaposlenja" value="@podaci.Datum_Zaposlenja" />
        </div>
        <div class="form-group">
            <label>Adresa</label>
            <input type="text" class="form-control" name="adresa" value="@podaci.Adresa" />
        </div>
        <div class="form-group">
            <label>Telefon</label>
            <input type="text" class="form-control" name="staz" value="@podaci.Telefon" />
        </div>
        <div class="form-group">
            <label>Spol</label>
            <select name="spol" class="form-control">
                <option value="@podaci.Spol">@podaci.Spol</option>
                <option disabled="disabled">--</option>
                <option value="M">M</option>
                <option value="Ž">Ž</option>
